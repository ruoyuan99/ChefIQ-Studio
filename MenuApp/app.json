{
  "expo": {
    "name": "Chef iQ",
    "slug": "chef-iq",
    "version": "1.0.0",
    "platforms": [
      "ios",
      "android"
    ],
    "orientation": "portrait",
    "icon": "./assets/AppLogo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/AppLogo.png",
      "resizeMode": "contain",
      "backgroundColor": "#DA6809"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.chefiq.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to your camera to take photos of recipes.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select recipe images.",
        "NSPhotoLibraryAddUsageDescription": "This app needs access to save recipe images to your photo library.",
        "NSMicrophoneUsageDescription": "This app needs access to your microphone for voice instructions.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/AppLogo.png",
        "backgroundColor": "#DA6809"
      },
      "package": "com.chefiq.app",
      "versionCode": 2,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "favicon": "./assets/AppLogo.png"
    },
    "plugins": [
      "expo-dev-client",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them as recipe images."
        }
      ],
      "expo-file-system",
      [
        "expo-media-library",
        {
          "photosPermission": "The app needs access to your photos to save recipe images.",
          "savePhotosPermission": "Allow Chef iQ to save recipe images to your photo library.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "5697d7c6-4b5c-4d86-85cd-988c9043eef2"
      }
    },
    "scheme": "chefiq",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/5697d7c6-4b5c-4d86-85cd-988c9043eef2"
    }
  }
}
